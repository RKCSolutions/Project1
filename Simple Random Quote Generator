#!/bin/bash
clear

RED="\e[3;31m"
NC="\e[1;0m"
i=0

while read -r line
do
	arr[$i]=$line
	i=$((i+1))
done < quotes.txt

random=$((RANDOM%i))

echo -e "${NC}--------------------------------------------------------------------------------------------------"
echo -e "${RED}================================ Welcome back `whoami` ========================================="
echo -e "${arr[$random]}\n"
echo -e "${NC}----------------------------------------------------------------------------------------------"
